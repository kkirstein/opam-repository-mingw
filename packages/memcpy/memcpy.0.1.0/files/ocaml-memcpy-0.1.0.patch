-		-nodll _build/lib/lib$(MOD_NAME)_stubs.a \
+		-dll _build/lib/dll$(MOD_NAME)_stubs$(EXT_DLL) \
+		-nodll _build/lib/lib$(MOD_NAME)_stubs$(EXT_LIB) \
