--- ./Makefile
+++ ./Makefile
@@ -1,5 +1,8 @@
 .PHONY: build install uninstall reinstall clean
 
+EXT_DLL:=$(shell ocamlfind ocamlc -config | awk '/^ext_dll:/ {print $$2}')
+EXT_LIB:=$(shell ocamlfind ocamlc -config | awk '/^ext_lib:/ {print $$2}')
+
 FINDLIB_NAME=memcpy
