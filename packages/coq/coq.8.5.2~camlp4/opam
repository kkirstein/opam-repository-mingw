build: [
  [
    "./configure"
    "-configdir"
    "%{lib}%/coq/config"
    "-mandir"
    man
    "-prefix"
    prefix
    "-usecamlp4"
    "-coqide"
    "no"
    "-debug"
    "-bindir"
    bin
    "-libdir"
    "%{lib}%/coq"
  ]
  [make "-j%{jobs}%"]
]
remove: ["rm" "-R" "%{lib}%/coq"]
